package com.company;

import java.util.Scanner;

public class Main{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        System.out.print("a: ");
        double a=sc.nextDouble();
        System.out.print("b: ");
        double b=sc.nextDouble();
        System.out.print("c: ");
        double c=sc.nextDouble();
        double z=((a-3)*b/2)+c;
        System.out.print("Result: "+z);
    }
}
