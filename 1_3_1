package com.company;

import java.util.Scanner;

public class Main{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        int a,sum=0;
        System.out.print("Введите число: ");
        a=sc.nextInt();
        if(a<=1){
            System.out.print("Error!");
            System.exit(1);
        }
        else{
            for(int i=1;i<a;i++){
                sum+=i;
            }
            System.out.print("Result: "+sum);
        }
    }
}
